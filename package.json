{
  "name": "@fjpedrosa/deploy-toolkit",
  "version": "1.1.2",
  "description": "Deployment toolkit for Next.js + Bun monorepo projects with Docker",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "bin": {
    "deplokit": "./bin/deploy.js"
  },
  "files": [
    "src",
    "bin",
    "templates",
    "dist/dashboard"
  ],
  "scripts": {
    "build": "tsc --noEmit",
    "build:dashboard": "cd dashboard && bun install && bun run build",
    "prepublishOnly": "bun run build:dashboard",
    "deploy": "bun run src/cli.ts",
    "deploy:all": "bun run src/cli.ts all",
    "deploy:backend": "bun run src/cli.ts backend",
    "deploy:frontend": "bun run src/cli.ts frontend",
    "deploy:migrations": "bun run src/cli.ts migrations",
    "dashboard": "bun run src/cli.ts dashboard",
    "version:check": "bun run src/cli.ts version",
    "health": "bun run src/cli.ts health-check",
    "status": "bun run src/cli.ts status",
    "history": "bun run src/cli.ts history",
    "rollback": "bun run src/cli.ts rollback",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "deploy",
    "docker",
    "vps",
    "ssh",
    "nextjs",
    "bun",
    "monorepo",
    "prisma"
  ],
  "author": "fjpedrosa",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.0.0",
    "commander": "^12.0.0",
    "date-fns": "^3.0.0",
    "execa": "^8.0.0",
    "inquirer": "^9.0.0",
    "ora": "^7.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.0",
    "@types/node": "^20.0.0",
    "bun-types": "latest",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fjpedrosa/deplokit.git"
  }
}
